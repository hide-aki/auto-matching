{
  "scripts": {
    "lint": "bin/lint.sh",
    "lint:fix": "bin/lint-fix.sh",
    "test": "bin/test.sh",
    "spec": "docker-compose run rails rspec",
    "prepush": "bin/prepush.sh",
    "docker:install": "bin/install.sh",
    "docker:clean": "docker volume ls | grep automatching | cut -b 21- | xargs docker volume rm",
    "docker:update": "docker-compose run rails bundle update && docker-compose run nuxt yarn upgrade --latest", 
    "up": "docker-compose up -d",
    "down": "docker-compose down",
    "ps": "docker-compose ps",
    "rails:c": "docker-compose run rails rails c",
    "rails:s": "docker-compose run rails rails s",      
    "rails:bundle": "docker-compose run rails bundle && docker-compose run worker bundle",
    "rails:rubocop": "docker-compose run rails rubocop -a",
    "rails:annotate": "docker-compose run rails bundle exec annotate",
    "swagger:up": "docker-compose -f docker-compose-swagger.yml up -d",
    "swagger:down": "docker-compose -f docker-compose-swagger.yml down",
    "swagger:gen": "node auto-matching-nuxt/src/plugins/swagger-codegen.js",
    "db:create": "docker-compose run rails rails db:create",
    "db:recovery": "docker-compose run rails rails db:recovery",
    "db:migrate": "docker-compose run rails rails ridgepole:apply",
    "db:seed": "docker-compose run rails rails db:seed_fu"
  }
}
