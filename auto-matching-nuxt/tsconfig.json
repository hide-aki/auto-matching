{
  "compilerOptions": {
    "outDir": "./build",
    "sourceMap": true,
    "target": "es5",
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitThis": true,
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"], 
    },
  },
  "exclude": ["node_modules", "build", "src/types", "src/store"],
  "include": ["src/**/*"]
}
