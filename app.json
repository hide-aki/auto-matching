{
  "name": "Auto Matching",
  "description": "Auto Matching Rails API server",
  "repository": "https://github.com/tsu-nera/auto-matching",
  "keywords": [
    "rails",
    "ruby"
  ],
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "11"
      }
    }
  ],
  "buildpacks": [
    {
      "url": "https://github.com/lstoll/heroku-buildpack-monorepo"
    },
    {
      "url": "heroku/ruby"
    },
    {
      "url": "https://github.com/gunpowderlabs/buildpack-ruby-rake-deploy-tasks"
    }
  ],
  "env": {
    "APP_BASE": {
      "value": "auto-matching-api-rails"
    },
    "DEPLOY_TASKS": {
      "value": "ridgepole:apply db:seed_fu"
    }
  }
}