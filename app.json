{
  "name": "Auto Matching",
  "description": "Auto Matching Rails API server",
  "repository": "https://github.com/tsu-nera/auto-matching",
  "keywords": [
    "rails",
    "ruby"
  ],
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "11"
      }
    }
  ],
  "buildpacks": [
    {
      "url": "https://github.com/lstoll/heroku-buildpack-monorepo"
    },
    {
      "url": "heroku/ruby"
    }
  ],
  "env": {
    "APP_BASE": {
      "value": "auto-matching-api-rails"
    },
    "AUTH0_CLIENT_ID": {
      "value": "dq1NOLYioOI9bMnPg4rOdDJGjgLdNMFy"
    },
    "AUTH0_JWKS": {
      "value": "https://auto-matching.auth0.com/.well-known/jwks.json"
    }
  },
  "scripts": {
    "postdeploy": [
      "bundle exec rails db:prepare"
    ]
  }
}