{
  "name": "Auto Matching",
  "description": "Auto Matching Rails API server",
  "repository": "https://github.com/tsu-nera/auto-matching",
  "keywords": ["rails", "ruby"],
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "11"
      }
    }
  ],
  "buildpacks": [
    {
      "url": "https://github.com/lstoll/heroku-buildpack-monorepo"
    },
    {
      "url": "heroku/ruby"
    }
  ],
  "env": {
    "APP_BASE": {
      "value": "auto-matching-api-rails"
    }
  },
  "scripts": {
    "postdeploy": [
      "bundle exec rails db:create",
      "bundle exec rails ridgepole:apply",
      "bundle exec rake db:seed_fu"
    ]
  }
}
